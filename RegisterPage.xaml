<Page x:Class="ComputerShop13B.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ComputerShop13B"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegisterPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="1.5*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
     Content="Regisztráció"
     FontWeight="Bold"
     FontFamily="Calibri"
     HorizontalAlignment="Center"
     Foreground="Blue"
     />

        <Label Grid.Row="1" 
       Grid.Column="0" 
       Content="Felhasználónév"
       FontWeight="Bold"
       FontSize="15
       "
       />
        <Label Grid.Row="2" 
        Grid.Column="0" 
        Content="Jelszó"
        FontWeight="Bold"
        FontSize="15
        "
        />

        <Label Grid.Row="3" 
           Grid.Column="0" 
           Content="Email"
           FontWeight="Bold"
           FontSize="15
           "
           />

        <Label Grid.Row="4" 
            Grid.Column="0" 
            Content="Teljes név"
            FontWeight="Bold"
            FontSize="15
            "
            />

        <TextBox
        x:Name="usernameTextBox"
        Grid.Row="1" 
        Grid.Column="1" 
        FontSize="15"
        VerticalAlignment="Center"
       />
        <PasswordBox 
        x:Name="passwordTextBox"
        Grid.Row="2" 
        Grid.Column="1" 
        FontSize="15"
        VerticalAlignment="Center"
      />

        <TextBox
         x:Name="mailTextBox"
         Grid.Row="3" 
         Grid.Column="1" 
         FontSize="15"
         VerticalAlignment="Center"
        />

        <TextBox
         x:Name="fullnameTextBox"
         Grid.Row="4" 
         Grid.Column="1" 
         FontSize="15"
         VerticalAlignment="Center"
        />

        <StackPanel Grid.Row="5" Grid.Column="1" Margin="20">
            <Button
                x:Name="regButton"
                Content="Regisztráció"
                FontWeight="Bold"
                Foreground="White"
                Background="Blue"
                FontSize="15"
                Width="Auto"
                HorizontalAlignment="Right"
                Click="regButton_Click"
        />
        </StackPanel>
    </Grid>
</Page>
