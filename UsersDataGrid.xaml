<Page x:Class="ComputerShop13B.UsersDataGrid"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ComputerShop13B"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UsersDataGrid">

    <Grid>
        <DataGrid x:Name="usersDataGrid" Margin="20"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}"/>
                <DataGridTextColumn Header="Felhasználónév" Binding="{Binding UserName}"/>
                <DataGridTextColumn Header="Teljesnév:" Binding="{Binding FullName}"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}"/>
                <DataGridTextColumn Header="Regisztráció" Binding="{Binding RegTime}"/>

                <DataGridTemplateColumn Header="Töröl">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button
                                x:Name="deleteUserButton"
                                Content="X"
                                Foreground="White"
                                Background="Red"
                                FontWeight="Bold"
                                FontSize="15"
                                Click="deleteUserButton_Click"
                                />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Módosít">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button
                                 x:Name="updateUserButton"
                                 Content="M"
                                 Foreground="Black"
                                 Background="Yellow"
                                 FontWeight="Bold"
                                 FontSize="15"
                                Click="updateUserButton_Click"
                                 />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
